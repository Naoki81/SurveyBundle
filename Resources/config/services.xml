<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <!--
    <parameters>
        <parameter key="ekyna_survey.example.class">Ekyna\Bundle\SurveyBundle\Example</parameter>
    </parameters>
    -->

    <services>

        <!-- Form types -->
        <service id="ekyna_survey.question.form_type" class="Ekyna\Bundle\SurveyBundle\Form\Type\QuestionType">
            <tag name="form.type" alias="ekyna_survey_question" />
        </service>
        <service id="ekyna_survey.choice.form_type" class="Ekyna\Bundle\SurveyBundle\Form\Type\ChoiceType">
            <tag name="form.type" alias="ekyna_survey_choice" />
        </service>
        <service id="ekyna_survey.result.form_type" class="Ekyna\Bundle\SurveyBundle\Form\Type\ResultType">
            <argument>%kernel.environment%</argument>
            <tag name="form.type" alias="ekyna_survey_result" />
        </service>
        <service id="ekyna_survey.answer.form_type" class="Ekyna\Bundle\SurveyBundle\Form\Type\AnswerType">
            <tag name="form.type" alias="ekyna_survey_answer" />
        </service>

        <!-- Complete factory -->
        <service id="ekyna_survey.complete_factory" class="Ekyna\Bundle\SurveyBundle\Complete\CompleteFactory">
            <argument type="service" id="form.factory" />
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument type="service" id="event_dispatcher" />
        </service>

        <!-- Charts loader -->
        <service id="ekyna_survey.chart.loader" class="Ekyna\Bundle\SurveyBundle\Chart\Loader">
            <argument type="service" id="doctrine.orm.default_entity_manager" />
        </service>

    </services>

</container>
