<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Ekyna\Bundle\SurveyBundle\Entity\Result"
            table="survey_result">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="date" type="datetime" column="date" />

        <!-- TODO extra fields -->

        <one-to-many target-entity="Ekyna\Bundle\SurveyBundle\Entity\Answer" field="answers" mapped-by="result" orphan-removal="true">
            <cascade>
                <cascade-persist />
                <cascade-remove />
            </cascade>
        </one-to-many>

        <many-to-one target-entity="Ekyna\Bundle\SurveyBundle\Entity\Survey" field="survey">
            <join-column name="survey_id" referenced-column-name="id" nullable="false" on-delete="CASCADE" />
        </many-to-one>

    </entity>

</doctrine-mapping>
